.mask_popup {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.7);
}

.window_popup {
  border-radius: 10rpx;
  margin-bottom: 10vh;
  background: #f9f7fa;
}

.title_popup {
  width: 100%;
  line-height: 120rpx;
  text-align: center;
  color: #444;
  font-size: 40rpx;
}

.text_popup {
  width: 100%;
  height: 90rpx;
  text-align: center;
  color: #999;
  font-weight: 400;
  font-size: 30rpx;
}

.area_button {
  display: flex;
  flex-direction: row;
}

.button_popup {
  width: 300rpx;
  height: 100rpx;
  background: #f9f7fa;
  border-top: 1rpx solid #d4d2d5;
  border-radius: 0 0 10rpx 10rpx;
}

.button_popup::after {
  border: none;
}

.button_determine {
  border-left: 1rpx solid #d4d2d5;
  border-radius: 0 0 10rpx 0;
  color: #fc4d3e;
}
